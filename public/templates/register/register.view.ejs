<div class="page-header">
</div>

<div ng-show="error" class="alert alert-danger row">
    <span>{{ error.message }}</span>
</div>
<div class="formWrapper">
    <form name="registerForm" ng-submit="onSubmit()">
        <h3>Register</h3>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" ng-model="credentials.username"></input>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Email" ng-model="credentials.email"></input>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" ng-model="credentials.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>